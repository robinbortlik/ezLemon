<div class="meeting-form">
  <%= simple_form_for(resource, :remote => true) do |f| %>

    <div class="inputs">
      <%= f.input :datetime_from, :as => :time, :input_html => {:width => 5} %>
      <%= f.input :datetime_to, :as => :time, :input_html => {:width => 5} %>
      <%= f.input :notice, :input_html => {:size => "20x2"} %>
    </div>

    <div class="hidden">
      <%= f.button :submit %>
    </div>
  <% end %>


<% unless resource.new_record? %>
    <%= t("who_will_come") %>
    <hr />
    <% resource.users.each do |user| %>
      <%= image_tag(user.small_avatar_url, :title => user) %>
    <% end %>
  <% end %>
</div>