<%= link_to t(".compose") , new_resource_path, :class => "float-left new-item-link" %>
<div class="clearfix"></div>
<% if collection.any? %>
  <ul class="statuses">
    <% collection.each do |resource| %>
      <li class="clearfix">
        <%= link_to(image_tag(resource.sender.small_avatar_url, :class => "avatar"), resource.sender) %>
        <div class='tweetTxt'>
          <%= link_to(resource.subject, resource) %>
        </div>
        <div class='date float-right'>
          <%= l resource.created_at, :format => :short %> <br />
          <%= link_to t(:destroy), resource_path(resource, :mailbox => params[:mailbox]), :confirm => t(:confirmation_question), :method => :delete %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= will_paginate %>
<% else %>
  <div class="no-objects margin-top">
    <%= t(".no_messages") %>
  </div>
<% end %>