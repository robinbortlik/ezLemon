<h2><%= t(:'.forgot_your_password?') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email %>
  </div>
  <div class="actions">
    <%= f.button :submit, t(:'.send_me_reset_password_instructions') %>
  </div>
<% end %>

<div id="devise_shared_links">
  <%= render :partial => "devise/shared/links" %>
</div>